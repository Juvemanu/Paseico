<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RouteInfModifyActivity"
        style="@style/Theme.MaterialComponents.Light.NoActionBar"
        android:background="@color/background">

    <TextView
            android:id="@+id/textView_routeInfo_themeText3"
            style="@style/SmallTextView"
            android:paddingStart="40dp"
            android:layout_marginTop="50dp"
            android:text="@string/length"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_routeInfo_rewardPointsText" />

    <TextView
            android:id="@+id/textView_routeInfo_length"
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:ems="10"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_routeInfo_rewardPoints" />

    <TextView
            android:id="@+id/textView_routeInfo_estimatedTime"
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:ems="10"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_routeInfo_length"/>

    <TextView
            android:id="@+id/textView_routeInfo_estimatedTimeText3"
            style="@style/SmallTextView"
            android:paddingStart="40dp"
            android:layout_marginTop="50dp"
            android:text="@string/estimated_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_routeInfo_themeText3" />

    <TextView
            android:id="@+id/textView_routeInfo_numberOfPOIText"
            style="@style/SmallTextView"
            android:paddingStart="40dp"
            android:layout_marginTop="50dp"
            android:text="@string/number_of_POI"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_routeInfo_estimatedTimeText3" />

    <TextView
            android:id="@+id/textView_routeInfo_numberOfPOI"
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:ems="10"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_routeInfo_estimatedTime" />

    <TextView
            android:id="@+id/textView_routeInfo_rewardPointsText"
            style="@style/SmallTextView"
            android:paddingStart="40dp"
            android:layout_marginTop="50dp"
            android:text="@string/reward_points"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_routeInfo_themeText"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/textView_routeInfo_rewardPoints"
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:ems="10"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_routeInfo_theme" />

    <TextView
            android:id="@+id/textView_routeInfo_nameOfRoute"
            android:layout_width="197dp"
            android:layout_height="45dp"
            style="@style/LargeTextView"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView_routeInfo_themeText"
            style="@style/SmallTextView"
            android:paddingStart="40dp"
            android:layout_marginTop="50dp"
            android:text="@string/theme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_routeInfo_nameOfRoute" />

    <TextView
            android:id="@+id/textView_routeInfo_theme"
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_routeInfo_nameOfRoute"
            android:layout_marginStart="248dp"/>
    <Button
            android:id="@+id/btn_routeInfo_modify"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:text="Modificar"
            app:layout_constraintBottom_toBottomOf="@+id/btn_routeInfo_startRoute"
            app:layout_constraintEnd_toStartOf="@+id/btn_routeInfo_startRoute"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_routeInfo_startRoute"
            app:layout_constraintVertical_bias="0.0"
            app:backgroundTint="@color/colorPrimary"
            style="@style/LargeButtonText"
            android:textColor="@color/white"/>
    <Button
            android:id="@+id/btn_routeInfo_startRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="80dp"
            android:text="@string/start_route"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_routeInfo_numberOfPOI"
            app:backgroundTint="@color/colorPrimary"
            style="@style/LargeButtonText"
            android:textColor="@color/white"/>

    <Button
            android:id="@+id/btn_routeInfo_back"
            android:text="@string/previous"
            android:layout_width="134dp"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="136dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_routeInfo_modify"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="14dp"
            app:backgroundTint="@color/colorPrimary"
            style="@style/LargeButtonText"
            android:textColor="@color/white" app:layout_constraintVertical_bias="0.468"/>


</androidx.constraintlayout.widget.ConstraintLayout>