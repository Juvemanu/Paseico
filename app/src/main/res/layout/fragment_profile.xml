<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/geometrics_cut"
    tools:context=".ui.profile.profileFragment">

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Cerrar sesion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_gallery" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="94dp"
        android:layout_height="147dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="148dp"
        android:src="@drawable/user_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nickProfileText"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginStart="170dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="360dp"
        android:gravity="center"
        android:text="Nick"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.293" />

    <TextView
        android:id="@+id/POINTSProfileText"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="181dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="100dp"
        android:text="PUNTOS"
        android:textColor="#A6ACAF"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickProfileText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/userPointsProfileText"
        android:layout_width="92dp"
        android:layout_height="33dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="300dp"
        android:gravity="center"
        android:text="XX"
        android:textColor="#4E2D9E"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/POINTSProfileText"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/RUTASProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="184dp"
        android:text="RUTAS"
        android:textColor="#A6ACAF"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/numberOfRoutesText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPointsProfileText" />

    <TextView
        android:id="@+id/numberOfRoutesText"
        android:layout_width="124dp"
        android:layout_height="34dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="XXX"
        android:textColor="#4E2D9E"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RUTASProfileText" />
</androidx.constraintlayout.widget.ConstraintLayout>