<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" 
        xmlns:tools="http://schemas.android.com/tools" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="@color/background">
    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/textViewWhite"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:paddingLeft="150dp" />

            <TextView
                android:id="@+id/routeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nombre Ruta"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />


        </TableRow>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView9"
                    android:textColor="@color/colorPrimaryDark" 
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="160dp"
                    android:text="@string/estimated_time" />

                <TextView
                    android:id="@+id/routeDuration"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="0dp"
                    android:text="TextView"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="61dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="0dp"
                    android:text="minutos" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView11"
                    android:textColor="@color/colorPrimaryDark" 
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="160dp"
                    android:text="@string/length" />

                <TextView
                    android:id="@+id/routeLenght"
                    android:layout_width="90dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="match_parent"
                    android:paddingLeft="30dp"
                    android:paddingRight="0dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:text="metros" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/routeReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="190dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="300"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView14"
                    android:textColor="@color/colorPrimaryDark" 
                    android:textStyle="bold"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Puntos" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView_orderedRouteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ordered_route"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/textView_orderedRouteResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAlignment="center" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>